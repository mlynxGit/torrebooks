<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_detail_layout_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/colorWhite"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <ImageView
        android:id="@+id/img_book_cover_detail"
        android:layout_width="128dp"
        android:src="@drawable/tgg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_height="190dp" />
    <TextView
        android:id="@+id/txt_title_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/nunito"
        android:singleLine="false"
        android:textSize="19sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/img_book_cover_detail"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="8dp"
        android:text="F. Scott Fitzgerald's the Great Gatsby" />
    <TextView
        android:id="@+id/txt_authors_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_toRightOf="@+id/img_book_cover_detail"
        android:layout_below="@+id/txt_title_detail"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="By F. Scott Fitzgerald, Harold Bloom" />

    <TextView
        android:id="@+id/txt_publishinfo_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:singleLine="false"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_bookmark_black_24dp"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/img_book_cover_detail"
        android:layout_below="@+id/txt_authors_detail"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="400 pages" />
    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginLeft="8dp"
        android:text="Download Book"
        android:layout_toRightOf="@+id/img_book_cover_detail"
        android:layout_below="@+id/txt_publishinfo_detail"  />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_book_cover_detail"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/txt_description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:lineSpacingExtra="10dp"
            android:text="Published 11-03-1990 - 400 pages" />
    </ScrollView>


</RelativeLayout>