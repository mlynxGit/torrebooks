<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="1dp">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#AAAAAA" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="0dp" android:right="1dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#3b5998" android:startColor="#3b5998" />
                    <stroke android:width="1dp" android:color="#3b5998" />
                    <corners android:radius="2dp" />
                    <padding android:bottom="1dp" android:left="0dp"
                        android:right="1dp" android:top="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>